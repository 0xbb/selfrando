set -ue

exec 2> >(tee -a /tmp/tc.log >&2)

TC_PATH="$(dirname "$0")"
CMD="$(basename "$0")"
export PATH="$(echo $PATH | sed -E 's/^[^:]+://')"

set -x
exec "$CMD" "$@" -B"$TC_PATH"
